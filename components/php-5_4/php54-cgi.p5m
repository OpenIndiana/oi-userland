# Transforms
<transform file path=.+/lib/.+\.a$ -> drop>
<transform file path=.+/lib/.+\.la$ -> drop>
<transform file path=.+/share/info/dir -> drop>

set name=pkg.fmri value=pkg:/web/php-54/php-cgi@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.4 (cgi/fastcgi)"
set name=info.upstream-url value="http://www.php.net"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

license php54.license license="PHP54 License"

depend fmri=pkg:/web/php-54/php-common type=require

link path=/usr/bin/php-cgi  target=../php/5.4/bin/php-cgi mediator=php mediator-version=$(COMPONENT_VERSION)
link path=/usr/bin/$(MACH64)/php-cgi target=../../php/5.4/bin/$(MACH64)/php-cgi mediator=php mediator-version=$(COMPONENT_VERSION)

dir path=/usr/php
dir path=/usr/php/5.4
dir path=/usr/php/5.4/bin
dir path=/usr/php/5.4/bin/$(MACH64)
file path=/usr/php/5.4/bin/$(MACH64)/php-cgi
file path=/usr/php/5.4/bin/php-cgi
