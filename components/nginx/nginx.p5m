# Transforms
<transform file path=.*/etc/.* -> default preserve true>
<transform file path=.*/etc/.* -> default mode 0644>
<transform file path=.*\.default$ -> drop>

set name=pkg.fmri value=pkg:/web/server/nginx@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.upstream_url value=$(COMPONENT_PROJECT_URL)
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license $(COMPONENT_NAME).license license="$(COMPONENT_LICENSE)"

file files/nginx-startup.sh path=/lib/svc/method/http-nginx mode=555
file files/nginx-manifest.xml path=/lib/svc/manifest/network/http-nginx.xml \
    restart_fmri=svc:/system/manifest-import:default

# Autogenerated block
dir  path=etc/nginx
file path=etc/nginx/fastcgi.conf mode=0644 preserve=true
file path=etc/nginx/fastcgi_params mode=0644 preserve=true
file path=etc/nginx/koi-utf
file path=etc/nginx/koi-win
file path=etc/nginx/mime.types mode=0644 preserve=true
file path=etc/nginx/nginx.conf mode=0644 preserve=true
file path=etc/nginx/scgi_params mode=0644 preserve=true
file path=etc/nginx/uwsgi_params mode=0644 preserve=true
dir  path=usr/share/nginx
dir  path=usr/share/nginx/html
file etc/nginx/html/50x.html path=usr/share/nginx/html/50x.html
file etc/nginx/html/index.html path=usr/share/nginx/html/index.html
file path=usr/sbin/$(MACH64)/nginx mode=0555
file path=usr/sbin/nginx mode=0555
dir  path=var/nginx
dir  path=var/nginx/logs owner=webservd
