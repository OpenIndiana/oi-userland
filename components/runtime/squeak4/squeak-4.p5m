set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license squeak.license license='MIT'
license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file -> add pkg.depend.bypass-generate libGL\.so\.1>

file usr/bin/squeak path=usr/bin/squeak4
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/ckformat mode=0555
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.AioPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.B3DAcceleratorPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.ClipboardExtendedPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.DBusPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.FT2Plugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.FileCopyPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.GStreamerPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.HostWindowPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.ImmX11Plugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.KedamaPlugin2
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.Mpeg3Plugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.RomePlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.ScratchPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.Squeak3D
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.SqueakFFIPrims
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.SqueakSSL
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.UUIDPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.UnicodePlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.UnixOSProcessPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.XDisplayControlPlugin
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-display-X11
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-display-custom
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-display-null
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-sound-custom
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-sound-null
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/so.vm-sound-pulse
file path=usr/lib/squeak/$(COMPONENT_VERSION)-3775/squeakvm mode=0555
file path=usr/share/doc/squeak-$(COMPONENT_VERSION)-3775/LICENSE
file usr/share/man/man1/squeak.1 path=usr/share/man/man1/squeak4.1

# the squeak script uses test -L (test for symbolic link) - use hardlink

hardlink path=usr/bin/squeak target=squeak4 mediator=squeak \
    mediator-version=4
hardlink path=usr/share/man/man1/squeak.1 target=squeak4.1 mediator=squeak \
    mediator-version=4

