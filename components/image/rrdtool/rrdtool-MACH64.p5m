set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)-$(MACH64)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

depend fmri=pkg:/image/rrdtool-common type=require
depend fmri=pkg:/tcl/tcllib type=require
#depend fmri=pkg:/runtime/lua@5.2.4 type=require

file path=usr/bin/$(MACH64)/rrdcached
file path=usr/bin/$(MACH64)/rrdcgi
link path=usr/bin/$(MACH64)/rrdcreate target=rrdupdate
link path=usr/bin/$(MACH64)/rrdinfo target=rrdupdate
file path=usr/bin/$(MACH64)/rrdtool
file path=usr/bin/$(MACH64)/rrdupdate
link path=usr/lib/$(MACH64)/librrd.so target=librrd.so.8.2.1
link path=usr/lib/$(MACH64)/librrd.so.8 target=librrd.so.8.2.1
file path=usr/lib/$(MACH64)/librrd.so.8.2.1
link path=usr/lib/$(MACH64)/lua/5.2/rrd.so target=rrd.so.0.0.0
link path=usr/lib/$(MACH64)/lua/5.2/rrd.so.0 target=rrd.so.0.0.0
file path=usr/lib/$(MACH64)/lua/5.2/rrd.so.0.0.0
file path=usr/lib/$(MACH64)/pkgconfig/librrd.pc
file path=usr/lib/$(MACH64)/rrdtool/ifOctets.tcl
file path=usr/lib/$(MACH64)/rrdtool/pkgIndex.tcl
file path=usr/lib/$(MACH64)/tclrrd$(COMPONENT_VERSION).so
