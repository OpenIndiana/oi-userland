set name=pkg.fmri \
    value=pkg:/$(COMPONENT_FMRI)/graphviz-php@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP bindings for Graphviz"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'
license graphviz.license.extra license="Other Notices"

<transform file path=usr.*/man/.+ -> default mangler.man.stability volatile>
# We deliver 64-bit objects under usr/php/8.2/extensions/, pkglint dislikes this
<transform file path=usr/php/8.2/extensions/gv.so -> default pkg.linted.userland.action001.2 true >

link path=usr/lib/$(MACH64)/graphviz/php/gv.so target=libgv_php.so
file path=usr/lib/$(MACH64)/graphviz/php/libgv_php.so
file path=usr/php/8.2/extensions/gv.so
file path=usr/share/graphviz/demo/modgraph.php
file path=usr/share/man/man3/gv-php.3

depend fmri=web/php-82 type=require
