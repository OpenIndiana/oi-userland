set name=pkg.fmri \
    value=pkg:/x11/compatibility/links-svid@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="SVID - $(COMPONENT_SUMMMARY)"
set name=pkg.description \
    value="Provides the /usr/X -> X11 link required by the SVID3 ABI"
set name=info.classification value=org.opensolaris.category.2008:System/X11
set name=org.opensolaris.arc-caseid value=PSARC/2004/187
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

# This link is required by the SVID3 ABI
link path=usr/X target=./X11
