set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.human-version value=$(HUMAN_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file path=usr/share/man/man3xevie/(.+)$ \
	-> set action.hash usr/share/man/man3/%<\1> >

link path=usr/X11/lib/$(MACH64)/libXevie.so target=../../../lib/$(MACH64)/libXevie.so
link path=usr/X11/lib/$(MACH64)/libXevie.so.1 target=../../../lib/$(MACH64)/libXevie.so.1
link path=usr/X11/lib/libXevie.so target=../../lib/libXevie.so
link path=usr/X11/lib/libXevie.so.1 target=../../lib/libXevie.so.1

file path=usr/include/X11/extensions/Xevie.h
link path=usr/lib/$(MACH64)/libXevie.so target=libXevie.so.1.0.0
link path=usr/lib/$(MACH64)/libXevie.so.1 target=libXevie.so.1.0.0
file path=usr/lib/$(MACH64)/libXevie.so.1.0.0
file path=usr/lib/$(MACH64)/pkgconfig/xevie.pc
link path=usr/lib/libXevie.so target=libXevie.so.1.0.0
link path=usr/lib/libXevie.so.1 target=libXevie.so.1.0.0
file path=usr/lib/libXevie.so.1.0.0
file path=usr/lib/pkgconfig/xevie.pc
file path=usr/share/man/man3xevie/Xevie.3
file path=usr/share/man/man3xevie/XevieEnd.3
file path=usr/share/man/man3xevie/XevieQueryVersion.3
file path=usr/share/man/man3xevie/XevieSelectInput.3
file path=usr/share/man/man3xevie/XevieSendEvent.3
file path=usr/share/man/man3xevie/XevieStart.3
