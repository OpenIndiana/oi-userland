CONFIGURE_ENV += PYTHON=/usr/bin/python3.5

COMPONENT_PREP_ACTION= ( mkdir -p $(@D)/external/tarballs && \
       for i in $(ARCHIVES) ; do rm -f $(@D)/external/tarballs/$$i && \
       ln -s $(USERLAND_ARCHIVES)/$$i $(@D)/external/tarballs/$$i ; done )


