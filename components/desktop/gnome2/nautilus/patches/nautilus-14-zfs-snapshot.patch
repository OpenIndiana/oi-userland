+  ZfsDataSet *snap;
+
+  snap_list = nautilus_directory_get_snapshots (bar->priv->dir);
+  match = g_list_find_custom (snap_list, path, (GCompareFunc)match_func);
+
+  if (match)
+    {
+      snap = (ZfsDataSet*) match->data;
+      nautilus_directory_remove_snapshot (bar->priv->dir, snap);
+      update_range (bar);
+    }
