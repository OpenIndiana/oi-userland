+								backup_dir,
+								(ZfsDirChangeCallback) zfs_dir_change_callback, 
+								bar);
+  nautilus_zfs_set_snap (bar, dir);
+  g_free (path);
+  g_free (zfs_dir);
+  if (backup_dir)
+    g_free(backup_dir);
+  g_object_unref (file);
