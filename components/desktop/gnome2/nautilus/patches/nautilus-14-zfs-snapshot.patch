+int get_snap_index_from_coord (TimeScale* ts, gdouble x, gdouble y)
+{
+  int i;
+
+  for (i = 0; i < ts->priv->num_snaps; i++)
+    {
+      if (x < ts->priv->bar_x_end[i])
+	return i;
+    }
+  return -1;
+}
