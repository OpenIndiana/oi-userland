set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file path=etc/.* -> default preserve true>

file files/lightdm-session path=usr/bin/lightdm-session
file files/lightdm.xml path=lib/svc/manifest/application/graphical-login/lightdm.xml pkg.depend.bypass-generate=.*
file files/svc-lightdm path=lib/svc/method/svc-lightdm mode=0555

group groupname="lightdm" gid="54"
user gcos-field="LightDM Reserved UID" group=lightdm home-dir=/var/lib/lightdm-data uid=54 username=lightdm

dir path=var/lib/lightdm-data mode=1770 group=lightdm

depend type=require fmri=library/xdg/consolekit

file path=etc/dbus-1/system.d/org.freedesktop.DisplayManager.conf
file path=etc/lightdm/keys.conf mode=644 preserve=true
