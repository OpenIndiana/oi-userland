 	leal	foo@NTPOFF(%ecx), %eax'
 	tls_first_major=2
 	tls_first_minor=14
-	tls_as_opt=--fatal-warnings
+	tls_as_opt="-m32 --fatal-warnings"
 	;;
   x86_64-*-*)
     conftest_s='
