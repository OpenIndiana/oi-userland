set name=pkg.fmri value=pkg:/system/library/g++-10-runtime@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.human-version value=$(HUMAN_VERSION)
set name=pkg.summary value="GCC C Runtime Libraries"
set name=info.classification value="org.opensolaris.category.2008:Development/C"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license COPYING.RUNTIME license="GCC runtime license"

link path=usr/gcc/10/lib/$(MACH64)/libstdc++.so target=libstdc++.so.6.0.28
link path=usr/gcc/10/lib/$(MACH64)/libstdc++.so.6 target=libstdc++.so.6.0.28
file path=usr/gcc/10/lib/$(MACH64)/libstdc++.so.6.0.28

link path=usr/gcc/10/lib/libstdc++.so target=libstdc++.so.6.0.28
link path=usr/gcc/10/lib/libstdc++.so.6 target=libstdc++.so.6.0.28
file path=usr/gcc/10/lib/libstdc++.so.6.0.28

# Add mediated links to /usr/lib/$(MACH64)
link path=usr/lib/$(MACH64)/libstdc++.so target=../../gcc/10/lib/$(MACH64)/libstdc++.so mediator=gcc mediator-version=10
link path=usr/lib/$(MACH64)/libstdc++.so.6 target=../../gcc/10/lib/$(MACH64)/libstdc++.so.6 mediator=gcc mediator-version=10

# Add mediated links to /usr/lib/
link path=usr/lib/libstdc++.so target=../gcc/10/lib/libstdc++.so mediator=gcc mediator-version=10
link path=usr/lib/libstdc++.so.6 target=../gcc/10/lib/libstdc++.so.6 mediator=gcc mediator-version=10
