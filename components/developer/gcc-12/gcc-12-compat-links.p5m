set name=pkg.fmri value=pkg:/system/library/gcc-12-compat-links@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.human-version value=$(HUMAN_VERSION)
set name=pkg.summary value="GCC C and C++ Runtime Libraries links"
set name=info.classification value="org.opensolaris.category.2008:Development/C"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license COPYING.RUNTIME license="GCC runtime license"

depend fmri=pkg:/system/library/gcc-12-runtime@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION) type=require
depend fmri=pkg:/system/library/g++-12-runtime@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION) type=require

# Add links to /usr/lib/$(MACH64)/ from gcc-12-runtime
link path=usr/lib/$(MACH64)/libatomic.so target=../../gcc/12/lib/$(MACH64)/libatomic.so
link path=usr/lib/$(MACH64)/libatomic.so.1 target=../../gcc/12/lib/$(MACH64)/libatomic.so.1
link path=usr/lib/$(MACH64)/libgcc_s.so target=../../gcc/12/lib/$(MACH64)/libgcc_s.so
link path=usr/lib/$(MACH64)/libgcc_s.so.1 target=../../gcc/12/lib/$(MACH64)/libgcc_s.so.1
link path=usr/lib/$(MACH64)/libgomp.so target=../../gcc/12/lib/$(MACH64)/libgomp.so
link path=usr/lib/$(MACH64)/libgomp.so.1 target=../../gcc/12/lib/$(MACH64)/libgomp.so.1
link path=usr/lib/$(MACH64)/libssp.so target=../../gcc/12/lib/$(MACH64)/libssp.so
link path=usr/lib/$(MACH64)/libssp.so.0 target=../../gcc/12/lib/$(MACH64)/libssp.so.0
# Add links to /usr/lib/$(MACH64) from g++-runtime
link path=usr/lib/$(MACH64)/libstdc++.so target=../../gcc/12/lib/$(MACH64)/libstdc++.so
link path=usr/lib/$(MACH64)/libstdc++.so.6 target=../../gcc/12/lib/$(MACH64)/libstdc++.so.6

# Add links to /usr/lib/ from gcc-12-runtime
link path=usr/lib/libatomic.so target=../gcc/12/lib/libatomic.so
link path=usr/lib/libatomic.so.1 target=../gcc/12/lib/libatomic.so.1
link path=usr/lib/libgcc_s.so target=../gcc/12/lib/libgcc_s.so
link path=usr/lib/libgcc_s.so.1 target=../gcc/12/lib/libgcc_s.so.1
link path=usr/lib/libgomp.so target=../gcc/12/lib/libgomp.so
link path=usr/lib/libgomp.so.1 target=../gcc/12/lib/libgomp.so.1
link path=usr/lib/libssp.so target=../gcc/12/lib/libssp.so
link path=usr/lib/libssp.so.0 target=../gcc/12/lib/libssp.so.0
# Add links to /usr/lib/ from g++-runtime
link path=usr/lib/libstdc++.so target=../gcc/12/lib/libstdc++.so
link path=usr/lib/libstdc++.so.6 target=../gcc/12/lib/libstdc++.so.6

