+		min = packet_get_int();
+		nbits = packet_get_int();
+		max = packet_get_int();
+		packet_check_eom();
+		if (max < min || nbits < min || max < nbits)
+			fatal("GSS_GEX, bad parameters: %d !< %d !< %d",
+			    min, nbits, max);
