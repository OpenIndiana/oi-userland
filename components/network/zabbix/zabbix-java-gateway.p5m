set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)/java-gateway@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

#Depend on the common zabbix package
depend fmri=$(COMPONENT_FMRI)/common type=require

file path=usr/sbin/zabbix_java/bin/zabbix-java-gateway-$(COMPONENT_VERSION).jar
file path=usr/sbin/zabbix_java/lib/android-json-4.3_r3.1.jar
file path=usr/sbin/zabbix_java/lib/logback-classic-0.9.27.jar
file path=usr/sbin/zabbix_java/lib/logback-console.xml
file path=usr/sbin/zabbix_java/lib/logback-core-0.9.27.jar
file path=usr/sbin/zabbix_java/lib/logback.xml
file path=usr/sbin/zabbix_java/lib/slf4j-api-1.6.1.jar
file path=usr/sbin/zabbix_java/settings.sh
file path=usr/sbin/zabbix_java/shutdown.sh
file path=usr/sbin/zabbix_java/startup.sh
