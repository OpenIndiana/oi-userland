+static void enumerate_reply(DNSServiceRef service,
+    DNSServiceFlags flags,
+    uint32_t IfIndex,
+    DNSServiceErrorType errorCode,
+    const char *replyDomain,
+    void *context) {
+    AvahiSDomainBrowser *b = context;
+    AvahiIfIndex interface;
+
