set name=pkg.fmri value=pkg:/editor/vim-modern@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Global settings file to make VIM be actually IMproved by default"
set name=pkg.description value="Vim is a clone of the Unix editor 'vi'.  By default it runs in an obsolete, compatible mode. These settings make it work in a non-compatible mode, which is assumed to be used in the VIM guide."
set name=com.oracle.info.description value="Settings for the Vi IMproved text editor"
set name=info.classification value="Development/Editors"
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

file files/vimrc path=usr/share/vim/vimrc

license vim.license license="VIM License"

depend type=require fmri=editor/vim@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
