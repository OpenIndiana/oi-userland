set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file path=usr/jdk/instances/openjdk1.7.0/(.+)$ -> set action.hash %<\1> >

file path=usr/jdk/instances/openjdk1.7.0/jre/lib/accessibility.properties
file path=usr/jdk/instances/openjdk1.7.0/jre/lib/ext/java-atk-wrapper.jar
link path=usr/lib/$(MACH64)/libatk-wrapper.so target=libatk-wrapper.so.0.0.17
link path=usr/lib/$(MACH64)/libatk-wrapper.so.0 target=libatk-wrapper.so.0.0.17
file path=usr/lib/$(MACH64)/libatk-wrapper.so.0.0.17
link path=usr/lib/libatk-wrapper.so target=libatk-wrapper.so.0.0.17
link path=usr/lib/libatk-wrapper.so.0 target=libatk-wrapper.so.0.0.17
file path=usr/lib/libatk-wrapper.so.0.0.17
