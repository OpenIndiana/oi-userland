<service_bundle type='manifest' name='pgpool'>

<service
        name='application/database/pgpool'
        type='service'
        version='1'>

        <!--   Wait for network interfaces to be initialized. -->         
        <dependency
                name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network:default' />
        </dependency>

        <!--  Wait for all local filesystems to be mounted. -->
        <dependency
                name='filesystem-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/local:default' />
        </dependency>


      <exec_method
          type='method'
          name='start'
          exec='/usr/bin/pgpool -f %{pgpool/config}'
          timeout_seconds='10' />

      <exec_method
          type='method'
          name='stop'
          exec='/usr/bin/pgpool -f %{pgpool/config} -m fast stop'
          timeout_seconds='5' />

        <exec_method
                type='method'
                name='refresh'
                exec='/usr/bin/pgpool -f %{pgpool/config} reload'
                timeout_seconds='60' />



      <instance name='default' enabled='false'>
	<method_context>
		<method_credential user='postgres' group='postgres' />
	</method_context>
	<property_group  name='pgpool' type='application'>
               <propval name='config' type='astring' value='/etc/pgpool-II/pgpool.conf' />
        </property_group>
      </instance>

      <stability value='Unstable' />

      <template>
              <common_name>
                      <loctext xml:lang='C'>
                              PostgreSQL middle ware for connection pooling and load balancing.
                      </loctext>
              </common_name>
              <documentation>
                      <manpage title='pgpool' section='8'
                              manpath='/usr/share/man' />
              </documentation>
      </template>
</service>

</service_bundle>
