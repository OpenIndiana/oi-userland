set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)-$(PYV)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file path=.*/bin/ -> set pkg.depend.bypass-generate .*metadata.* >

file path=usr/bin/cpuinfo-$(PYVER)
link path=usr/bin/cpuinfo target=cpuinfo-$(PYVER) mediator=python3 \
    mediator-version=$(PYVER)
file path=usr/lib/python$(PYVER)/vendor-packages/cpuinfo/__init__.py
file path=usr/lib/python$(PYVER)/vendor-packages/cpuinfo/__main__.py
# We are not Windows
file path=usr/lib/python$(PYVER)/vendor-packages/cpuinfo/cpuinfo.py pkg.depend.bypass-generate=.*winreg.* 
file path=usr/lib/python$(PYVER)/vendor-packages/py_cpuinfo-$(COMPONENT_VERSION)-py$(PYVER).egg-info/PKG-INFO
file path=usr/lib/python$(PYVER)/vendor-packages/py_cpuinfo-$(COMPONENT_VERSION)-py$(PYVER).egg-info/SOURCES.txt
file path=usr/lib/python$(PYVER)/vendor-packages/py_cpuinfo-$(COMPONENT_VERSION)-py$(PYVER).egg-info/dependency_links.txt
file path=usr/lib/python$(PYVER)/vendor-packages/py_cpuinfo-$(COMPONENT_VERSION)-py$(PYVER).egg-info/entry_points.txt
file path=usr/lib/python$(PYVER)/vendor-packages/py_cpuinfo-$(COMPONENT_VERSION)-py$(PYVER).egg-info/top_level.txt

# force a dependency on the Python runtime
depend type=require fmri=__TBD pkg.debug.depend.file=python$(PYVER) \
    pkg.debug.depend.path=usr/bin
