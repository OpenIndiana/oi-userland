file path=usr/lib/python$(PYVER)/vendor-packages/charset_normalizer-$(COMPONENT_VERSION)-py$(PYVER).egg-info/top_level.txt
file path=usr/lib/python$(PYVER)/vendor-packages/charset_normalizer/__init__.py
