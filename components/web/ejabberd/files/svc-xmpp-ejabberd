source /lib/svc/share/smf_include.sh

typeset -r EJABBERDCTL=/usr/bin/ejabberdctl

case "$1" in
  start)
        ${EJABBERDCTL} start
        ${EJABBERDCTL} started
        ;;
  stop)
        ${EJABBERDCTL} stop
        ${EJABBERDCTL} stopped
        ;;
  *)
        print "Usage: $0 {start|stop}"
        exit 1
        ;;
esac

# not reached
