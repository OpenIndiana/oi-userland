<transform file path=/etc/php/.+/conf.d/.+ -> default preserve true>
<transform file path=/etc/php/.+/conf.d/.+ -> default mode 0644>

set name=pkg.fmri value=pkg:/web/php-55/extension/php-xdebug@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Provides functions for debugging your PHP script"
set name=info.upstream-url value="http://pecl.php.net/package/xdebug"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

license LICENSE license="PHP3.0"

dir path=etc/php
dir path=etc/php/5.5
dir path=etc/php/5.5/conf.d
dir path=usr/php
dir path=usr/php/5.5
dir path=usr/php/5.5/extensions
dir path=usr/php/5.5/extensions/$(MACH64)
file path=usr/php/5.5/extensions/$(MACH64)/xdebug.so
file path=usr/php/5.5/extensions/xdebug.so
file xdebug.ini path=/etc/php/5.5/conf.d/xdebug.ini mode=0644 preserve=true
