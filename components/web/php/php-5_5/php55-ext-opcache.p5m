set name=pkg.fmri value=pkg:/web/php-55/extension/php-opcache@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.5 (opcache extension)"
set name=info.upstream-url value="http://www.php.net"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)

license php55.license license="PHP55 License"

dir path=/usr/php
dir path=/usr/php/5.5
dir path=/usr/php/5.5/extensions
dir path=/usr/php/5.5/extensions/$(MACH64)
file files/opcache.ini path=/etc/php/5.5/conf.d/opcache.ini preserve=true
file path=/usr/php/5.5/extensions/$(MACH64)/opcache.so
file path=/usr/php/5.5/extensions/opcache.so
depend fmri=pkg:/web/php-55/php-common type=require
