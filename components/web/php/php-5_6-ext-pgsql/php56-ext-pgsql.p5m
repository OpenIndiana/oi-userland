set name=pkg.fmri value=pkg:/web/php-56/extension/php-pgsql@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.6 (postgresql extension)"
set name=info.upstream-url value="http://www.php.net"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

license LICENSE license="PHP56 License"

dir path=/usr/php
dir path=/usr/php/5.6
dir path=/usr/php/5.6/extensions
dir path=/usr/php/5.6/extensions/$(MACH64)
file pgsql.ini path=/etc/php/5.6/conf.d/pgsql.ini preserve=true
file path=/usr/php/5.6/extensions/$(MACH64)/pgsql.so
file path=/usr/php/5.6/extensions/pgsql.so
