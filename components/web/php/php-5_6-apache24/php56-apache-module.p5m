<transform file path=.+/lib/.+\.a$ -> drop>
<transform file path=.+/lib/.+\.la$ -> drop>
<transform file path=.+/share/info/dir -> drop>

set name=pkg.fmri value=pkg:/web/server/apache-24/module/apache-php56@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.6"
set name=info.upstream-url value="http://www.php.net"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

license php56.license license="PHP55 License"

dir path=/etc/apache2
dir path=/etc/apache2/2.4
dir path=/usr/apache2/2.4/libexec
dir path=/usr/apache2/2.4/libexec/$(MACH64)
file files/php56.conf path=/etc/apache2/2.4/conf.d/php56.conf preserve=true mode=0644
file /usr/apache2/2.4/libexec/$(MACH64)/libphp5.so \
    path=/usr/apache2/2.4/libexec/$(MACH64)/mod_php56.so
file /usr/apache2/2.4/libexec/libphp5.so \
    path=/usr/apache2/2.4/libexec/mod_php56.so

depend fmri=pkg:/web/php-56/php-common type=require
