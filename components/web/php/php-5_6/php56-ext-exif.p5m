set name=pkg.fmri value=pkg:/web/php-56/extension/php-exif@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.6 (exif extension)"
set name=info.upstream-url value="http://www.php.net"
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

license php56.license license="PHP56 License"

dir path=/etc/php
dir path=/etc/php/5.6
dir path=/etc/php/5.6/conf.d
dir path=/usr/php
dir path=/usr/php/5.6
dir path=/usr/php/5.6/extensions
dir path=/usr/php/5.6/extensions/$(MACH64)
file files/exif.ini path=/etc/php/5.6/conf.d/exif.ini preserve=true
file path=/usr/php/5.6/extensions/$(MACH64)/exif.so
file path=/usr/php/5.6/extensions/exif.so
depend fmri=pkg:/web/php-56/php-common type=require
