set name=pkg.fmri \
    value=pkg:/web/php-70/extension/php-ctype@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 7.0 (ctype extension)"
set name=info.classification value=org.opensolaris.category.2008:Development/PHP
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream-url value=http://www.php.net
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
file files/ctype.ini path=etc/php/7.0/conf.d/ctype.ini preserve=true
file path=usr/php/7.0/extensions/$(MACH64)/ctype.so
file path=usr/php/7.0/extensions/ctype.so
license php70.license license="PHP70 License"
depend type=require fmri=pkg:/web/php-70/php-common
