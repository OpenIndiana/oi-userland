. /lib/svc/share/smf_include.sh

# This script is being used for two purposes: as part of an SMF
# start method, and as a snort(1M) application.
#

case $1 in 
'start')
	pfexec /usr/bin/snort -d -D -c /etc/snort.conf
	;;

*)
	echo "Usage: $0 { start }"
	exit 1
	;;
esac	

exit $?
