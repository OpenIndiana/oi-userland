set name=pkg.fmri value=pkg:/web/php-55/php-fpm@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.5 (FPM)"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=info.classification \
    value="org.opensolaris.category.2008:Development/PHP"

link path=/usr/bin/php-fpm target=../php/5.5/bin/php-fpm mediator=php mediator-version=$(COMPONENT_VERSION)
link path=/usr/bin/$(MACH64)/php-fpm target=../../php/5.5/bin/$(MACH64)/php-fpm mediator=php mediator-version=$(COMPONENT_VERSION)
link path=/usr/share/man/man8/php-fpm.8 target=../../../php/5.5/share/man/man8/php-fpm.8 mediator=php mediator-version=$(COMPONENT_VERSION)

license php55.license license="PHP55 License"

file files/auth_attr path=etc/security/auth_attr.d/php-fpm-55
file files/prof_attr path=etc/security/prof_attr.d/php-fpm-55
file files/php-fpm.xml \
path=lib/svc/manifest/network/php-fpm-55.xml

depend fmri=pkg:/web/php-55/php-common type=require

dir path=/usr
dir path=/usr/php
dir path=/usr/php/5.5
dir path=/usr/php/5.5/bin
dir path=/usr/php/5.5/bin/$(MACH64)
dir path=/usr/php/5.5/share/man/man8
dir path=/usr/php/5.5/var
dir path=/usr/php/5.5/var/log
dir path=/usr/php/5.5/var/run
file path=/usr/php/5.5/bin/$(MACH64)/php-fpm
file path=/usr/php/5.5/bin/php-fpm
file path=/usr/php/5.5/share/man/man8/php-fpm.8
file path=/var/php/5.5/fpm/status.html
file files/php-fpm.conf path=/etc/php/5.5/php-fpm.conf mode=0644 preserve=true
