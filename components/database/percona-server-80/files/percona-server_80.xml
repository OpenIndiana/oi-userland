<service_bundle type='manifest' name='percona-server'>

<service
        name='application/database/percona-server'
        type='service'
        version='1'>

	<!--
	   Wait for network interfaces to be initialized.
	-->
        <dependency
                name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network:default' />
        </dependency> 

	<!--
	   Wait for all local filesystems to be mounted.
	-->
        <dependency
                name='filesystem-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/local:default' />
        </dependency> 

        <exec_method
                type='method'
                name='start'
                exec='/lib/svc/method/percona-server_80 start'
                timeout_seconds='60' />

        <exec_method
                type='method'
                name='stop'
                exec=':kill'
                timeout_seconds='300' />

        <instance name='version_80' enabled='false'>

        	<method_context working_directory='/var/percona-server/8.0'>
                	<method_credential user='mysql' group='mysql' />
        	</method_context>

        	<property_group  name='percona-server' type='application'>
                	<propval name='bin' type='astring'
                    	   value='/usr/percona-server/8.0/bin' />
                	<propval name='data' type='astring'
                    	   value='/var/percona-server/8.0/data' />
                        <propval name='value_authorization' type='astring'
                           value='solaris.smf.value.percona_server/version_80' /> 
                        <propval name='action_authorization' type='astring'
                           value='solaris.smf.manage.percona_server/version_80' />
        	</property_group>

                <property_group name='general' type='framework'>
                        <propval name='action_authorization' type='astring' value='solaris.smf.manage.percona_server/version_80' />
                        <propval name='value_authorization' type='astring' value='solaris.smf.value.percona_server/version_80' />
                </property_group>
          </instance>

        <stability value='Evolving' />

</service>

</service_bundle>

