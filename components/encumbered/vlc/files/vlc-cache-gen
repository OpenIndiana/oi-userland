set -e

. /lib/svc/share/smf_include.sh

VLC_CACHE_GEN=/usr/lib/64/vlc/vlc-cache-gen
VLC_PLUGINS_DIR=/usr/lib/64/vlc/plugins
AWK=/usr/bin/nawk
SVCPROP=/usr/bin/svcprop
SVCCFG=/usr/sbin/svccfg

last_version=$($SVCPROP -p config/version $SMF_FMRI)
updated=$($SVCPROP -p config/updated $SMF_FMRI)

current_version=$($VLC_CACHE_GEN --version | $AWK ' { print $NF; }')

if [ "$current_version" != "$last_version" -o "$updated" != "true" ]; then
  printf "Regenerating VLC plugins cache\n"
  $VLC_CACHE_GEN $VLC_PLUGINS_DIR
  
  $SVCCFG -s $SMF_FMRI setprop config/version = "$current_version"
  $SVCCFG -s $SMF_FMRI setprop config/updated = true
  $SVCCFG -s $SMF_FMRI refresh
fi

exit 0
