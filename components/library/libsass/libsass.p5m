file path=usr/include/sass/version.h
file path=usr/include/sass2scss.h
link path=usr/lib/$(MACH64)/libsass.so target=libsass.so.1.0.0
link path=usr/lib/$(MACH64)/libsass.so.0 target=libsass.so.1.0.0
file path=usr/lib/$(MACH64)/libsass.so.1.0.0
file path=usr/lib/$(MACH64)/pkgconfig/libsass.pc
link path=usr/lib/libsass.so target=libsass.so.1.0.0
link path=usr/lib/libsass.so.0 target=libsass.so.1.0.0
file path=usr/lib/libsass.so.1.0.0
file path=usr/lib/pkgconfig/libsass.pc
