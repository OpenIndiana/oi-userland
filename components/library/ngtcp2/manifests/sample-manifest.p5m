file path=usr/lib/$(MACH64)/libngtcp2.so.15.0.1
link path=usr/lib/$(MACH64)/libngtcp2_crypto_gnutls.so \
    target=libngtcp2_crypto_gnutls.so.7.0.0
link path=usr/lib/$(MACH64)/libngtcp2_crypto_gnutls.so.7 \
    target=libngtcp2_crypto_gnutls.so.7.0.0
file path=usr/lib/$(MACH64)/libngtcp2_crypto_gnutls.so.7.0.0
file path=usr/lib/$(MACH64)/pkgconfig/libngtcp2.pc
