<transform file path=usr/lib/fs/fuse/(.*) -> default mode 0555>

set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
set name=variant.opensolaris.zone value=global value=nonglobal

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

depend type=require fmri=driver/fuse  variant.opensolaris.zone=global

file path=usr/bin/fusermount
file path=usr/include/fuse/fuse.h
file path=usr/include/fuse/fuse_common.h
file path=usr/include/fuse/fuse_common_compat.h
file path=usr/include/fuse/fuse_compat.h
file path=usr/include/fuse/fuse_lowlevel.h
file path=usr/include/fuse/fuse_lowlevel_compat.h
file path=usr/include/fuse/fuse_opt.h
file path=usr/include/fuse/ulockmgr.h
file path=usr/lib/$(MACH64)/libfuse.so.2.7.1
link path=usr/lib/$(MACH64)/libfuse.so target=libfuse.so.2.7.1
file path=usr/lib/$(MACH64)/pkgconfig/fuse.pc
file path=usr/lib/fs/fuse/fusermount.bin
file path=usr/lib/fs/fuse/mount
file path=usr/lib/fs/fuse/umount
file path=usr/lib/libfuse.so.2.7.1
link path=usr/lib/libfuse.so target=libfuse.so.2.7.1
file path=usr/lib/pkgconfig/fuse.pc

file files/libfuse.exec_attr path=etc/security/exec_attr.d/library:libfuse restart_fmri=svc:/system/rbac:default
file files/libfuse.prof_attr path=etc/security/prof_attr.d/library:libfuse restart_fmri=svc:/system/rbac:default
