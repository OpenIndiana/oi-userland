set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

file path=usr/include/pugixml-$(COMPONENT_VERSION)/pugiconfig.hpp
file path=usr/include/pugixml-$(COMPONENT_VERSION)/pugixml.hpp
file path=usr/lib/$(MACH64)/cmake/pugixml/pugixml-config-noconfig.cmake
file path=usr/lib/$(MACH64)/cmake/pugixml/pugixml-config.cmake
link path=usr/lib/$(MACH64)/pugixml-$(COMPONENT_VERSION)/libpugixml.so \
    target=libpugixml.so.1
file path=usr/lib/$(MACH64)/pugixml-$(COMPONENT_VERSION)/libpugixml.so.$(COMPONENT_VERSION)
link path=usr/lib/$(MACH64)/pugixml-$(COMPONENT_VERSION)/libpugixml.so.1 \
    target=libpugixml.so.$(COMPONENT_VERSION)
file path=usr/lib/cmake/pugixml/pugixml-config-noconfig.cmake
file path=usr/lib/cmake/pugixml/pugixml-config.cmake
file path=usr/lib/pkgconfig/pugixml.pc
link path=usr/lib/pugixml-$(COMPONENT_VERSION)/libpugixml.so \
    target=libpugixml.so.1
file path=usr/lib/pugixml-$(COMPONENT_VERSION)/libpugixml.so.$(COMPONENT_VERSION)
link path=usr/lib/pugixml-$(COMPONENT_VERSION)/libpugixml.so.1 \
    target=libpugixml.so.$(COMPONENT_VERSION)
