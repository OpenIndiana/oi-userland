link path=usr/lib/$(MACH64)/libdiscid.so.0 \
    target=libdiscid.so.$(COMPONENT_VERSION)
file path=usr/lib/$(MACH64)/pkgconfig/libdiscid.pc
link path=usr/lib/libdiscid.so target=libdiscid.so.$(COMPONENT_VERSION)
file path=usr/lib/libdiscid.so.$(COMPONENT_VERSION)
link path=usr/lib/libdiscid.so.0 target=libdiscid.so.$(COMPONENT_VERSION)
file path=usr/lib/pkgconfig/libdiscid.pc
