file path=usr/include/netpbm/pbmfont.h
file path=usr/include/netpbm/pgm.h
file path=usr/include/netpbm/pm.h
file path=usr/include/netpbm/pm_config.h
file path=usr/include/netpbm/pm_gamma.h
file path=usr/include/netpbm/pm_system.h
file path=usr/include/netpbm/pnm.h
file path=usr/include/netpbm/ppm.h
file path=usr/include/netpbm/ppmcmap.h
file path=usr/include/netpbm/ppmdfont.h
file path=usr/include/netpbm/ppmdraw.h
file path=usr/include/netpbm/ppmfloyd.h
file path=usr/include/netpbm/runlength.h
