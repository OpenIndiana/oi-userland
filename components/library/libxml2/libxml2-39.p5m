set name=pkg.fmri \
    value=pkg:/library/python/libxml2-39@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="The XML library - Python 3.9 bindings"
set name=info.classification \
    value=org.opensolaris.category.2008:Development/Python
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

file path=usr/lib/python3.9/vendor-packages/drv_libxml2.py
file path=usr/lib/python3.9/vendor-packages/libxml2.py
# Use implicit transform for so ABI rename
file usr/lib/python3.9/vendor-packages/libxml2mod.so path=usr/lib/python3.9/vendor-packages/libxml2mod.so

license libxml2.license license="libxml license"
