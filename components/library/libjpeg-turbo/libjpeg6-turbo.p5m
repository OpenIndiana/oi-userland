    target=libjpeg.so.62.4.0
file path=usr/lib/libjpeg6-turbo/lib/$(MACH64)/libjpeg.so.62.4.0
file path=usr/lib/libjpeg6-turbo/lib/$(MACH64)/pkgconfig/libjpeg.pc
