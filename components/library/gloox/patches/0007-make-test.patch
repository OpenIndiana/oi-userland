@@ -17,12 +17,12 @@
 check: test
 
 test:
-	make -C src test
+	$(MAKE) -C src test
 
 leakcheck: leaktest
 
 leaktest:
-	make -C src leaktest
+	$(MAKE) -C src leaktest
 
 includetest:
-	make -C src includetest
+	$(MAKE) -C src includetest
