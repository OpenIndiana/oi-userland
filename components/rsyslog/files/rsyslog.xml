<service_bundle type='manifest' name='system/rsyslog:rsyslog'>

<service
	name='system/system-log'
	type='service'
	version='1'>

	<instance name='rsyslog' enabled='false'>

		<exec_method
			type='method'
			name='start'
			exec='/lib/svc/method/rsyslog'
			timeout_seconds='600' />

		<exec_method
			type='method'
			name='stop'
			exec=':kill'
			timeout_seconds='60' />

		<exec_method
			type='method'
			name='refresh'
			exec=':kill -HUP'
			timeout_seconds='60' />

		<template>
			<common_name>
				<loctext xml:lang='C'>
				reliable and extended system log daemon
				</loctext>
			</common_name>
			<documentation>
				<manpage title='rsyslogd' section='1M'
				    manpath='/usr/share/man' />
			</documentation>
		</template>

	</instance>

</service>

</service_bundle>
