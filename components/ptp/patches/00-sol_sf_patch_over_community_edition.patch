+          delayAfterPacketSend.seconds = 0;
+          delayAfterPacketSend.nanoseconds = 1000;
+          nanoSleep(&delayAfterPacketSend);
+          haveTs = getSendTime(&ts, timeMode, netPath);
+          timerNow(&now);
