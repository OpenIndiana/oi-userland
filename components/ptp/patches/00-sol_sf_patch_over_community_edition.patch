+          err = (struct sock_extended_err*)CMSG_DATA(cmsg);
+          if (err->ee_errno == ENOMSG &&
+              err->ee_origin == SO_EE_ORIGIN_TIMESTAMPING &&
+              !memcmp(pdu, buf + cnt - pdulen, pdulen)) {
+            matchedPkt = 1;
+          }
+        }
+      }
+    }
+      break;
+#endif /* ifndef __sun */
+
+    default:
+      ERROR("!!! txTimestamp() Unexpected time mode %d\n", timeMode);
+      return 0;
+      break;
+    }
