+          TimeInternal delay;
+          delay.seconds = 0;
+          delay.nanoseconds = 1000;
+          nanoSleep(&delay);
+          timerNow(&now);
+          subTime(&now, &now, &start);
+          /* 0.1 second is the maximum we wait... */
+          if(now.seconds >= 1 || now.nanoseconds >= 100000000) {
+            DBGV("Failed to get send time stamp after %d.%09ds\n",
