	$(INSTALL) $(COMPONENT_DIR)/4.4-xml/ent/* $(PROTO_DIR)/usr/share/sgml/docbook/xml-dtd-4.4-$(COMPONENT_VERSION)-$(COMPONENT_SUBVERSION)/ent
