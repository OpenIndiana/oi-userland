	$(INSTALL) $(COMPONENT_DIR)/4.5-xml/*.{dtd,mod} $(PROTO_DIR)/usr/share/sgml/docbook/xml-dtd-4.5-$(COMPONENT_VERSION)-$(COMPONENT_SUBVERSION)
